leancrypto-$(CONFIG_LEANCRYPTO_SHA3)					       \
				+= ../hash/src/sha3_arm_asm_null.o	       \
				   ../hash/src/sha3_arm_ce_null.o
endif

leancrypto-$(CONFIG_LEANCRYPTO_SHA3)					       \
				+= ../hash/src/sha3_riscv_asm_null.o

